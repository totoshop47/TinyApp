  <% if(username) { %>
    <%= username %>
    <form method="POST" action="/logout">
      <input type="submit" value="Logout" />
    </form>
  <% } else { %>
    <form method="POST" action="/login">
      <input type="text" name="username" placeholder="username" />
      <input type="submit" value="Login" />
    </form>
  <% } %>




